<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:background="@drawable/background1"
            android:layout_margin="15dp"
            tools:context=".utama.home.HomeBackgroundFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="125dp"
            android:orientation="vertical">


        <android.support.v7.widget.CardView
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/homebottom"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/coba"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_perm_identity_black_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:paddingLeft="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Selamat Datang"
                            android:textStyle="bold"
                            android:textColor="#252525"
                            android:textSize="20dp"/>
                </RelativeLayout>
                <TextView
                        android:paddingTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/Homeuser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="15dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Telusuri Ojol"/>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

            <android.support.v7.widget.CardView
                    android:elevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp">
                <ImageView
                        android:padding="10dp"
                        android:id="@+id/btncar"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/mobil"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/coba"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mobil"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorblack"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:elevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp">

                <ImageView
                        android:padding="5dp"
                        android:id="@+id/btnmotor"
                        android:src="@drawable/drivmotor"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/coba"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Motor"
                    android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorblack"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:elevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content">
                <ImageView
                        android:padding="10dp"
                        android:id="@+id/btnfood"
                        android:src="@drawable/food"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/coba"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Makanan"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorblack"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</ScrollView>